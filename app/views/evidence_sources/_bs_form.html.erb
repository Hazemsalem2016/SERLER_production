<%= bootstrap_form_for :evidence_source, url: evidence_sources_path do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :year %>
  <%= f.text_field :author %>
  <%= f.text_field :source_title %>
  <%= f.text_field :publisher %>
  <div class="row">
    <div class="col-sm-4">
      <%= f.text_field :volume_number, class: 'col-sm-3' %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :issue_number %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :page %>
    </div>
  </div>
  <%= f.text_field :DOI %>
  <div class="row">
    <div class="col-sm-6"><%= f.submit "SUBMIT", class: "btn btn-success btn-block" %></div>
    <div class="col-sm-6"><%= f.button "DISCARD", type: "reset", class: "btn btn-danger btn-block", id: "btn-discard" %></div>
  </div>
<% end %>
