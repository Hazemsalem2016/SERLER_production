<table class="table">
  <thead>
    <td>
      <h4>Search Result: <%= @results.count %> </h4>
    </td>
  </thead>
  <tbody>
    <% @results.each_with_index do |evidence, index| %>
      <tr>
        <td class="row">
          <div class="row">
            <div class="col-sm-1 col-md-1">
              <small><%= index + 1 %>. </small>
            </div>
            <div class="col-sm-10 col-md-10">
              <strong><%= evidence.title%></strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-offset-1 col-sm-9 col-md-offset-1 col-md-9">
              <small> <%= evidence.evidence_source_authors.join(", ") %> </small>
              <small><%= evidence.year %></small>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-offset-1 col-sm-9 col-md-offset-1 col-md-9">
              <strong>Source:</strong> <small> <%= evidence.source_title%> </small>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-offset-1 col-sm-9 col-md-offset-1 col-md-9">
              <strong>URL:</strong><small> <%= evidence.URL %> </small>
              <strong>DOI:</strong><small><%= evidence.DOI%></small>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
